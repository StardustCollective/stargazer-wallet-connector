{
  "compilerOptions": {
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strict": true,
    "noImplicitAny": false,
    "target": "ES2021",
    "module": "CommonJS",
    "moduleResolution": "node",
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "./dist/cjs",
    "declaration": true,
    "declarationDir": "./dist/types",
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "paths": {
      "@": ["./"],
      "@/*": ["./*"]
    }
  },
  "include": ["src"]
}
